<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="10dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/img_admin_product"
            android:scaleType="centerCrop"
            android:src="@drawable/mypham"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_margin="6dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:id="@+id/tv_admin_name_product"
            android:fontFamily="sans-serif"
            android:lines="2"
            android:textColor="@android:color/black"
            android:text="Bộ mĩ phẩm"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginRight="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="6dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:id="@+id/tv_admin_price"
            android:textColor="@android:color/holo_red_dark"
            android:text="200.000 đ"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:background="@drawable/bg"
        android:layout_marginRight="16dp"
        android:layout_height="1dp">
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_width="match_parent"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/btn_admin_edit"
                android:src="@drawable/ic_mode_edit_black_24dp"/>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:id="@+id/btn_admin_delete"
                android:layout_weight="1"
                style="@style/Widget.AppCompat.Button.Borderless"/>
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>